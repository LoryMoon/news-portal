1 Создать двух пользователей
from django.contrib.auth.models import User
user1 = User.objects.create_user('user1', password='testpass123')
user2 = User.objects.create_user('user2', password='testpass123')

2 Создать два объекта модели Author
from news.models import Author
author1 = Author.objects.create(user=user1)
author2 = Author.objects.create(user=user2)

3 Добавить 4 категории
from news.models import Category
cat1 = Category.objects.create(name='Спорт')
cat2 = Category.objects.create(name='Политика')
cat3 = Category.objects.create(name='Образование')
cat4 = Category.objects.create(name='Технологии')

4 Добавить 2 статьи и 1 новость
from news.models import Post
article1 = Post.objects.create(
    author=author1,
    post_type=Post.ARTICLE,
    title='Первая статья',
    content='Очень интересный текст первой статьи...' * 10
)

article2 = Post.objects.create(
    author=author2,
    post_type=Post.ARTICLE,
    title='Вторая статья',
    content='Еще более интересный текст второй статьи...' * 10
)

news1 = Post.objects.create(
    author=author1,
    post_type=Post.NEWS,
    title='Важная новость',
    content='Срочная новость о важных событиях...' * 10
)

5 Присвоить категории (у одной статьи 2 категории)
from news.models import PostCategory
PostCategory.objects.create(post=article1, category=cat1)
PostCategory.objects.create(post=article1, category=cat2)  # 2 категории
PostCategory.objects.create(post=article2, category=cat3)
PostCategory.objects.create(post=news1, category=cat4)

6 Создать 4 комментария
from news.models import Comment
comment1 = Comment.objects.create(post=article1, user=user1, text='Отличная статья!')
comment2 = Comment.objects.create(post=article1, user=user2, text='Интересно, но можно лучше')
comment3 = Comment.objects.create(post=article2, user=user1, text='Спасибо за информацию')
comment4 = Comment.objects.create(post=news1, user=user2, text='Важная новость!')

7 Корректировать рейтинги
article1.like()  # +1
article1.like()  # +1
article1.dislike()  # -1
article2.like()  # +1
news1.like()  # +1
news1.like()  # +1

comment1.like()  # +1
comment1.like()  # +1
comment2.dislike()  # -1
comment3.like()  # +1
comment4.like()  # +1

8 Обновить рейтинги пользователей
author1.update_rating()
author2.update_rating()

9 Лучший пользователь
best_author = Author.objects.order_by('-rating').first()
print(f"Лучший пользователь: {best_author.user.username}, рейтинг: {best_author.rating}")

10 Лучшая статья
best_post = Post.objects.order_by('-rating').first()
print(f"Лучшая статья: {best_post.created_at}, автор: {best_post.author.user.username}, рейтинг: {best_post.rating}, заголовок: {best_post.title}, превью: {best_post.preview()}")

11 Все комментарии к лучшей статье
comments = Comment.objects.filter(post=best_post)
for comment in comments:
    print(f"Дата: {comment.created_at}, пользователь: {comment.user.username}, рейтинг: {comment.rating}, текст: {comment.text}")